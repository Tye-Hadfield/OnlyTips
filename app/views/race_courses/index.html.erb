<p id="notice"><%= notice %></p>

<%= render "partials/navbar" %>

<h1>Race Courses</h1>

<table>
  <thead>
    <tr>
      <th>Race course name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="container">
    <% @race_courses.each do |race_course| %>
      <tr>
          <td class="col" style="width: 100px;"><%= race_course.race_course_name %></td>
          <td class="col" style="width: 100px;"><%= race_course.address %></td>
          <td class="col" style="width: 100px;"><%= link_to 'Show', race_course %></td>
          <td class="col" style="width: 100px;"><%= link_to 'Edit', edit_race_course_path(race_course) %></td>
          <td class="col" style="width: 100px;"><%= link_to 'Destroy', race_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Race Course', new_race_course_path %>
